    <!-- 网页主体开始 -->
    <main>
<!-- 根据menproduct数组长度，每三个产品为一组 -->
<% for (let i = 0; i < menproduct.length; i += 3) { %>
    <div class="product-container">
        <!-- 第一列产品 -->
        <% if (menproduct[i]) { %>
            <a href="/product?productId=<%= menproduct[i].id %>" class="product-box">
                <img class="product-img" src="<%= menproduct[i].image_path %>" alt="Product <%= i + 1 %>">
                <div class="product-details">
                    <div class="product-name"><%= menproduct[i].home_title %></div>
                    <div class="product-price">￥<%= menproduct[i].price %></div>
                </div>
            </a>
        <% } %>
 
        <!-- 第二列产品 -->
        <% if (menproduct[i + 1]) { %>
            <a href="/product?productId=<%= menproduct[i + 1].id %>" class="product-box">
                <img class="product-img" src="<%= menproduct[i + 1].image_path %>" alt="Product <%= i + 2 %>">
                <div class="product-details">
                    <div class="product-name"><%= menproduct[i + 1].home_title %></div>
                    <div class="product-price">￥<%= menproduct[i + 1].price %></div>
                </div>
            </a>
        <% } %>
 
        <!-- 第三列产品 -->
        <% if (menproduct[i + 2]) { %>
            <a href="/product?productId=<%= menproduct[i + 2].id %>" class="product-box">
                <img class="product-img" src="<%= menproduct[i + 2].image_path %>" alt="Product <%= i + 3 %>">
                <div class="product-details">
                    <div class="product-name"><%= menproduct[i + 2].home_title %></div>
                    <div class="product-price">￥<%= menproduct[i + 2].price %></div>
                </div>
            </a>
        <% } %>
    </div>
<% } %>
 
 
       
       
        <!-- 其他产品行省略 -->
 
    </main>
    <!-- 网页主体结束 -->
 
 
    <%- include('partials/footer') %>
 
 
    <!-- 添加 Bootstrap JavaScript 依赖 -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <!--跳转相应网页-->
    <script>
        // 创建地图并设置中心点坐标和缩放级别
        var map = L.map('map').setView([18.7953, 98.9529], 15);
 
        // 添加地图图层
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
          attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);
 
        // 添加标记并设置清迈大学的位置
        // 在地图上添加标记（清迈大学的位置）
        L.marker([18.80046,98.95095]).addTo(map)
              .bindPopup("<b>Chiang Mai University</b>").openPopup();
             
        </script>
</body>
</html>
 