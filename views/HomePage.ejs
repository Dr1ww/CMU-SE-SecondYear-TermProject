<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- 添加 Bootstrap 样式链接 -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="../CSS/HomePageFormat.css">
    <link rel="stylesheet" href="../CSS/global.css">
 
    <!-- Leaflet CSS 文件 -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
 
    <!-- Leaflet JavaScript 文件 -->
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
 
    <title>Home Page</title>
</head>
<body>
 <!--主导航栏-->
    <%- include('partials/navbar') %>


        <!-- 网页主体开始 -->
        <main>
            <!-- Purchase top-selling product 部分 -->
    <section class="purchase-section">
        <!-- 左侧商品介绍 -->
        <div class="product-info">
            <h1><strong>Purchase top-selling <br> product now.</strong> </h1>
            <p>Experience ultimate comfort and style with our innovative lightweight running shoes. Ideal for all your athletic pursuits and daily adventures.</p>
        <!-- 使用按钮，并通过 JavaScript 处理点击事件实现跳转 -->
        <button class="buyNowButton" id="buyNowButton">Buy Now</button>        
    </div>
        <!-- 右侧商品图片 -->
        <div class="product-image">
            <img src="../Image Source 1/Product1.png" alt="Top-Selling Product">
        </div>
    </section>
 
            <!-- 商品展示部分 -->
<section class="new-arrivals-section">
    <h1>New Arrivals</h1>
    <div class="product-container">
        <!-- 商品 1 -->
        <div class="product">
            <img src="../Image Source 1/NIKE Cloth 抠图版.png" alt="Product 1">
            <h3>Hoodie</h3>
            <button class="buyNowButton" id="buyNowButton1">Buy Now</button>
        </div>
        <!-- 商品 2 -->
        <div class="product">
            <img src="../Image Source 1/Cloth 1.png" alt="Product 2">
            <h3>Short</h3>
            <button class="buyNowButton" id="buyNowButton2">Buy Now</button>
        </div>
        <!-- 商品 3 -->
        <div class="product">
            <img src="../Image Source 1/image 2.png" alt="Product 3">
            <h3>Sneaker</h3>
            <button class="buyNowButton" id="buyNowButton3">Buy Now</button>
        </div>
        <!-- 商品 4 -->
        <div class="product">
            <img src="../Image Source 1/image 3.png" alt="Product 4">
            <h3>KIDS</h3>
            <button class="buyNowButton" id="buyNowButton4">Buy Now</button>
        </div>
    </div>
    <!--轮播-->
     <!-- 轮播部分 -->
     <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
          <div class="carousel-item active">
              <img class="d-block w-100" src="../imageCarousel/Carousel_1.jpg" alt="First slide">
          </div>
          <div class="carousel-item">
              <img class="d-block w-100" src="../imageCarousel/Carousel_2.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
              <img class="d-block w-100" src="../imageCarousel/Carousel_3.jpg" alt="Third slide">
          </div>
          <div class="carousel-item">
              <img class="d-block w-100" src="../imageCarousel/Carousel_4.jpg" alt="Fourth slide">
          </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
      </a>
  </div>
</section>
 
        </main>
        <!-- 网页主体结束 -->
 
        <!--footer-->
        <%- include('partials/footer') %>

 
    <!-- 添加 Bootstrap JavaScript 依赖 -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <!--跳转相应网页-->
    <script>
        // 获取所有buyNowButton按钮元素
        const buyNowButtons = document.querySelectorAll('.buyNowButton');
 
       // 遍历所有按钮，为每个按钮添加点击事件监听器
        buyNowButtons.forEach(function(button, index) {
       // 为每个按钮添加点击事件监听器
        button.addEventListener('click', function() {
       // 构造产品ID
        const productId = 'h00' + index;
       // 设置购买页面的 URL，并传递产品ID作为查询参数
        window.location.href = '/product?productId=' + productId;
        });
    });
    </script> 
      <script>
      // 创建地图并设置中心点坐标和缩放级别
      var map = L.map('map').setView([18.7953, 98.9529], 15);
 
      // 添加地图图层
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
      }).addTo(map);
 
      // 添加标记并设置清迈大学的位置
      // 在地图上添加标记（清迈大学的位置）
      L.marker([18.80046,98.95095]).addTo(map)
            .bindPopup("<b>Chiang Mai University</b>").openPopup();
           
      </script>
 
 
     
</body>
</html>
 
 