<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- 添加 Bootstrap 样式链接 -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="../CSS/global.css">
    <link rel="stylesheet" href="../CSS/Product-Selling-Format.css">
    <!-- Leaflet CSS 文件 -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
 
    <!-- Leaflet JavaScript 文件 -->
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
 
    <title><%= productData.title %></title>
</head>
<body>
<!--导航栏--> 
<%- include('partials/navbar') %>

    <!-- 网页主体开始 -->
    <main>
        <!-- 产品标题 -->
        <div class="product-header">
            <h2><%= productData.title %></h2>
        </div>
       
        <!-- 商品展示内容区域 -->
        <section class="product-section">
            <!-- 产品图片 -->
            <div class="product-image">
                <img src="<%= productData.image_path %>" alt="Product Image">
            </div>
            <!-- 产品信息 -->
            <div class="product-info">
                <h3>Product Overview</h3>
                <p><%= productData.overview %></p>
               
                <!-- 产品简介 -->
                <div class="product-description">
                    <h3>Product Introduction</h3>
                    <p><%= productData.introduction %></p>
                </div>
               
                <!-- 尺码选择 -->
                <div class="product-size">
                    <h3>Size</h3>
                    <div class="size-buttons">
                        <%
                        // 将尺码选项字符串拆分成数组
                        const sizeOptions = productData.size_options.split(',').map(option => option.trim());
                        sizeOptions.forEach(function(size) {
                        %>
                        <button><%= size %></button>
                        <% }); %>
                    </div>
                </div>
               
                <!-- 价格和加入购物车按钮 -->
                <div class="product-price">
                    <h3>Price</h3>
                    <p>￥<%= productData.price %></p>
                    <!-- 添加到购物车按钮 -->
                    <button onclick="addToCart()">Add to Cart</button>
                </div>
               
                    <!-- 4. 政策说明 -->
                    <div class="policy-info">
                        <h3>Policy</h3>
                   
                        <!-- Policy 1 -->
                        <div class="policy-item">
                            <!-- Icon for Policy 1 -->
                            <img src="../Icon/package_car_2x.png" alt="Policy 1 Icon">
                   
                            <!-- Description for Policy 1 -->
                            <p>Free Delivery: Returns are also free delivery.</p>
                        </div>
                   
                        <!-- Policy 2 -->
                        <div class="policy-item">
                            <!-- Icon for Policy 2 -->
                            <img src="../Icon/Chield_check_fill@2x.png" alt="Policy 2 Icon">
                   
                            <!-- Description for Policy 2 -->
                            <p>Protecting Privacy: Full Privacy Shipping.</p>
                        </div>
                    </div>
            </div>
        </section>
    </main>
    <!-- 网页主体结束 -->
 
 
    <!-- 底部开始 -->
    <%- include('partials/footer') %>

    <!-- 底部结束 -->
 
 
    <!-- 添加 Bootstrap JavaScript 依赖 -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    
    <!-- JavaScript 代码处理按钮点击事件，实现样式切换 -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var buttons = document.querySelectorAll('.size-buttons button');
            // 遍历所有按钮，添加点击事件监听器
            buttons.forEach(function(button) {
                button.addEventListener('click', function() {
                    // 移除所有按钮的 'active' 类
                    buttons.forEach(function(btn) {
                        btn.classList.remove('active');
                    });
                    // 为当前点击的按钮添加 'active' 类
                    button.classList.add('active');
                });
            });
        });

        // 将商品添加到购物车
        function addToCart() {
            // 获取产品标题、尺码和价格
            var title = '<%= productData.title %>';
            var selectedSize = document.querySelector('.size-buttons button.active').textContent;
            var price = '<%= productData.price %>';

            // 创建一个对象来存储数据
            var data = {
                title: title,
                size: selectedSize,
                price: price
            };

            // 使用 AJAX 发送数据到服务器
            var xhr = new XMLHttpRequest();
            xhr.open('POST', '/add-to-cart', true);
            xhr.setRequestHeader('Content-Type', 'application/json');
            xhr.onreadystatechange = function() {
                if (xhr.readyState === 4) {
                    if (xhr.status === 200) {
                        // 处理成功响应
                        console.log('Item added to cart successfully!');
                        alert('Item added to cart successfully!');
                    } else {
                        // 处理错误响应
                        console.error('Failed to add item to cart.');
                        alert('Failed to add item to cart.');
                    }
                }
            };
            xhr.send(JSON.stringify(data));
        }
    </script>
